<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/busi_center_listview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >
    </ListView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/busi_center_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:tag="571,572"
            android:text="A中心"
            android:textColor="@color/color_lightblue" />

        <TextView
            android:id="@+id/busi_center_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:tag="570,574,579"
            android:text="B中心"
            android:textColor="@color/color_lightblue" />

        <TextView
            android:id="@+id/busi_center_item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:tag="577,578,580"
            android:text="C中心"
            android:textColor="@color/color_lightblue" />

        <TextView
            android:id="@+id/busi_center_item4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:tag="573,575,576"
            android:text="D中心"
            android:textColor="@color/color_lightblue" />
    </LinearLayout>

</LinearLayout>