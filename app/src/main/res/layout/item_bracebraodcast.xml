<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/brace_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:00"
            android:textColor="@color/color_blue" />

        <TextView
            android:id="@+id/brace_item_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:text="【重要播报】"
            android:textStyle="bold" />
    </LinearLayout>

    <com.chinamobile.yunweizhushou.view.FlexibleTextView
        android:id="@+id/brace_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="10:00重要播报重要播报重要播报重要播报重要播报重要播报"
        android:textSize="@dimen/default_small_size" />

    <LinearLayout
        android:id="@+id/timeasix_gone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp" >

        <TextView
            android:id="@+id/brace_item_msg"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="点击展开"
            android:textColor="@color/color_lightgreen"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:id="@+id/brace_item_share"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1.8"
            android:drawableLeft="@mipmap/ic_brace_share"
            android:text="分享"
            android:textSize="@dimen/default_ssmall_size"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/brace_item_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_weight="1"
            android:drawableLeft="@mipmap/ic_brace_comment"
            android:text="300"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:id="@+id/brace_item_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_weight="1"
            android:text="阅读 3000"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>

</LinearLayout>