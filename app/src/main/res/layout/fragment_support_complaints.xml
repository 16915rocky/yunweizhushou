<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/complaint_today_total_layout"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >



            <LinearLayout
                android:id="@+id/complain_today_nochart_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="昨日投诉"
                            android:textSize="@dimen/default_middle_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/complain_num_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="138"
                                android:textSize="@dimen/default_small_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="环"
                                android:textSize="@dimen/default_mini_size" />

                            <ImageView
                                android:id="@+id/complain_today_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:src="@mipmap/icon_arrow_down" />

                            <TextView
                                android:id="@+id/complain_percent_today"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11.1%"
                                android:textSize="@dimen/default_ssmall_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="当月投诉"
                            android:textSize="@dimen/default_middle_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/complain_num_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="138"
                                android:textSize="@dimen/default_small_size"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="环"
                                android:textSize="@dimen/default_mini_size" />

                            <ImageView
                                android:id="@+id/complain_month_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:src="@mipmap/icon_arrow_down" />

                            <TextView
                                android:id="@+id/complain_percent_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11.1%"
                                android:textSize="@dimen/default_ssmall_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="年累计"
                            android:textSize="@dimen/default_middle_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/complain_num_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="138"
                                android:textSize="@dimen/default_small_size"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/complain_year_huan"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:text="环"
                                android:textSize="@dimen/default_mini_size" />

                            <ImageView
                                android:id="@+id/complain_year_state"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="bottom"
                                android:src="@mipmap/icon_arrow_down" />

                            <TextView
                                android:id="@+id/complain_percent_year"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="11.1%"
                                android:textSize="@dimen/default_ssmall_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="3dp"
                            android:gravity="center"
                            android:text="年累计"
                            android:textSize="@dimen/default_middle_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="138"
                                android:textSize="@dimen/default_middle_size"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/complain_hot_tips_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_rectangle_lightblue_bg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="前一天投诉量TOP10"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_middle_size"
                    android:textStyle="bold" />

                <com.chinamobile.yunweizhushou.view.MyGridView
                    android:id="@+id/complain_preday_num_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:listSelector="@null"
                    android:numColumns="2" >
                </com.chinamobile.yunweizhushou.view.MyGridView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/corner_rectangle_lightblue_bg"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="前一天投诉增长TOP10"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_middle_size"
                    android:textStyle="bold" />

                <com.chinamobile.yunweizhushou.view.MyGridView
                    android:id="@+id/complain_preday_increase_num_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:listSelector="@null"
                    android:numColumns="2" >
                </com.chinamobile.yunweizhushou.view.MyGridView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/complain_today_chart_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/complain_today_chart_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/complain_today_chart"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="visible" >
                </com.github.mikephil.charting.charts.LineChart>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/complain_today_chart_btn1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_rectangle_lightblue_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="当日客服TOP10公告的咨询量趋势"
                        android:textColor="@color/color_white" />

                    <TextView
                        android:id="@+id/complain_today_chart_btn2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:background="@drawable/corner_rectangle_lightblue_bg"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="7日客服TOP10公告的咨询量趋势"
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>