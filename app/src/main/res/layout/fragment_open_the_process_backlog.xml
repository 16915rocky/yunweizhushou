<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

  	<LinearLayout 
  	    android:layout_width="match_parent"
  	    android:layout_height="wrap_content"
  	    android:orientation="horizontal"
  	     android:background="@color/color_lightgray2"
  	    android:gravity="center"
  	    android:paddingTop="10dp"
  	    android:paddingBottom="10dp"
  	    >
  	    <RelativeLayout 
  	        android:layout_width="0dp"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1">
  	        <TextView 
  	             android:id="@+id/tv1"
  	             android:padding="3dp"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:gravity="center"
  	            android:text="调度进程\n积压"
  	            android:textSize="@dimen/default_small_size"
  	            android:layout_centerHorizontal="true"
  	            android:layout_centerVertical="true"
  	            android:textColor="@color/color_white"
  	            android:background="@drawable/corner_rectangle_lightblue_bg"
  	            />
  	    </RelativeLayout>
  	     <RelativeLayout 
  	        android:layout_width="0dp"
  	        android:layout_height="wrap_content"
  	        android:layout_weight="1">
  	       <TextView 
  	           android:id="@+id/tv2"
  	           android:padding="3dp"
  	            android:layout_width="wrap_content"
  	            android:layout_height="wrap_content"
  	            android:gravity="center"
  	            android:text="拆分工单\n积压"
  	            android:textSize="@dimen/default_small_size"
  	            android:layout_centerHorizontal="true"
  	            android:layout_centerVertical="true"
  	            android:textColor="@color/color_white"
  	            android:background="@drawable/corner_rectangle_lightblue_bg"
  	            />
  	    </RelativeLayout>
  	   
  	  
  	</LinearLayout>
  	<LinearLayout 
  	    android:layout_width="match_parent"
  	    android:layout_height="30dp"
  	    android:orientation="horizontal"
  	   android:background="@color/color_lightblue">
  	    
  	    <TextView 
  	        android:layout_width="0dp"
  	        android:layout_weight="1"
  	        android:layout_height="30dp"
  	        android:text="地市"
  	        android:gravity="center"
  	        android:textColor="@color/color_white"/>
  	    <TextView 
  	        android:layout_width="0dp"
  	        android:layout_weight="1"
  	        android:layout_height="30dp"
  	         android:textColor="@color/color_white"
  	         android:gravity="center"
  	         android:text="服务器"/>
  	    <TextView 
  	        android:layout_width="0dp"
  	        android:layout_weight="1"
  	        android:layout_height="30dp"
  	         android:textColor="@color/color_white"
  	         android:gravity="center"
  	         android:text="IP"/>
  	    <TextView 
  	        android:layout_width="0dp"
  	        android:layout_weight="1"
  	        android:layout_height="30dp"
  	         android:textColor="@color/color_white"
  	         android:gravity="center"
  	         android:text="积压量"/>
  	</LinearLayout>
  	   
  <ListView
        android:id="@+id/myListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView> 
   

</LinearLayout>