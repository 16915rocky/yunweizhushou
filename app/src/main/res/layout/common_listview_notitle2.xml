<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    android:orientation="vertical"
    android:id="@+id/common_listview_notitle_lt"
     >
	   <TextView 
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:padding="3dp"
        android:background="@color/color_lightgray3"
        android:textSize="@dimen/default_mini_size"/>
    <ListView
        android:id="@+id/common_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@null"   
        android:scrollbars="none" >
    </ListView>
    
    <TextView
        android:visibility="gone"
        android:textSize="@dimen/default_middle_size"
        android:textColor="@color/color_dark"
        android:gravity="center"
        android:text="当前没有数据"
        android:id="@+id/nocontent_textview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        />

</LinearLayout>