<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_lightgray2"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/duty_group_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/cornerbg_white"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:id="@+id/duty_group_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3.5"
                android:drawableLeft="@drawable/widget_left_icon_greenblue"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:text="故障总控台"
                android:textColor="@color/color_greenblue"
                android:textSize="@dimen/default_ssmall_size" />

            <TextView
                android:id="@+id/duty_group_longnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center"
                android:text="1333333333"
                android:textColor="@color/color_greenblue"
                android:textSize="@dimen/default_ssmall_size" />

            <TextView
                android:id="@+id/duty_group_shortnum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="132233"
                android:textColor="@color/color_greenblue"
                android:textSize="@dimen/default_ssmall_size" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_sun"
                android:visibility="invisible" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@mipmap/icon_moon"
                android:visibility="invisible" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/duty_child_layout"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/cornerbg_white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5" >

            <ImageView
                android:id="@+id/duty_child_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@mipmap/icon_duty_manager_jia" />

            <ImageView
                android:id="@+id/duty_child_headtag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="3dp"
                android:layout_toLeftOf="@id/duty_child_head"
                android:src="@mipmap/icon_duty_manager_jia_dot" />
        </RelativeLayout>

        <TextView
            android:id="@+id/duty_child_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical|start"
            android:text="小明"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:id="@+id/duty_child_longnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="1333333333"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:id="@+id/duty_child_shortnum"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="132233"
            android:textSize="@dimen/default_ssmall_size" />

        <ImageView
            android:id="@+id/duty_child_sun"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_sun" />

        <ImageView
            android:id="@+id/duty_child_moon"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@mipmap/icon_moon" />
    </LinearLayout>

</LinearLayout>