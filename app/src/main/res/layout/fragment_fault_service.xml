<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/fault_service_chart_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="" />

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/fault_service_chart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:visibility="visible" >
    </com.github.mikephil.charting.charts.LineChart>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/fault_service_chart_btn1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="当日客服TOP10公告的咨询量趋势"
            android:textColor="@color/color_white" />

        <TextView
            android:id="@+id/fault_service_chart_btn2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/corner_rectangle_lightblue_bg"
            android:gravity="center"
            android:padding="5dp"
            android:text="7日客服TOP10公告的咨询量趋势"
            android:textColor="@color/color_white" />
    </LinearLayout>

</LinearLayout>