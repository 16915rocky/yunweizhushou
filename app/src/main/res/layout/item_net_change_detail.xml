<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/net_change_detail_num"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text=""
                android:textSize="@dimen/default_mini_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6" />

            <TextView
                android:id="@+id/net_change_detail_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:background="@drawable/corner_rectangle_lightblue_bg"
                android:gravity="center"
                android:padding="3dp"
                android:text=""
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_mini_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/net_change_detail_content1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:textSize="@dimen/default_mini_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="任务处理人:"
                android:textSize="@dimen/default_mini_size" />

            <TextView
                android:id="@+id/net_change_detail_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_rectangle_lightgray2_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/default_mini_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="任务处理组:"
                android:textSize="@dimen/default_mini_size" />

            <TextView
                android:id="@+id/net_change_detail_group"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_rectangle_lightgray2_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/default_mini_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="任务时间:"
                android:textSize="@dimen/default_mini_size" />

            <TextView
                android:id="@+id/net_change_detail_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/corner_rectangle_lightgray2_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text=""
                android:textSize="@dimen/default_mini_size" />

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2" />
        </LinearLayout>

        <TextView
            android:id="@+id/net_change_detail_content2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:text=""
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/default_mini_size" />
    </LinearLayout>

</LinearLayout>