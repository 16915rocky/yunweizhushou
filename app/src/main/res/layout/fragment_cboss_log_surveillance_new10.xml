<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app ="http://schemas.android.com/apk/res-auto"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
       >
          <com.chinamobile.yunweizhushou.view.DashView
	        android:layout_width="10dp"
	        android:layout_height="25dp"
	        app:dashWidth="2dp"
	        app:lineWidth="4dp"	    
	        app:lineColor="@color/color_blue"
	        android:layout_marginLeft="20dp"
	        app:dashOrientation="1"
	        app:lineHeight="1dp"/>   
	        
            <com.chinamobile.yunweizhushou.view.DashView
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        app:dashWidth="2dp"
	        app:lineWidth="4dp"	    
	        app:lineColor="@color/color_blue"
	        android:layout_marginLeft="20dp"
	        android:layout_marginTop="25dp"
	        app:dashOrientation="0"
	        app:lineHeight="1dp"/>   
	        <ImageView 
	            android:layout_width="8dp"
	            android:layout_height="8dp"
	            android:src="@mipmap/icon_right_blue"
	            android:layout_marginTop="21dp"
	            android:layout_alignParentRight="true"/>
	      
    </RelativeLayout>
    
    <RelativeLayout 
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="vertical">
       <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/color_gray2" >

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv1_new10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CBOSS"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:id="@+id/tv2_new10"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1_new10"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="@dimen/default_mini_size" />

        <com.chinamobile.yunweizhushou.view.WaveView
            android:id="@+id/waveview1_new10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>
    </RelativeLayout>
      <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        >
        	 
        	
          <com.chinamobile.yunweizhushou.view.DashView
	        android:layout_width="10dp"
	        android:layout_height="25dp"
	        app:dashWidth="2dp"
	        app:lineWidth="4dp"	    
	        app:lineColor="@color/color_blue"
	        android:layout_marginRight="20dp"
	        android:layout_alignParentRight="true"
	        app:dashOrientation="1"
	        app:lineHeight="1dp"/>     
	         <com.chinamobile.yunweizhushou.view.DashView
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        app:dashWidth="2dp"
	        app:lineWidth="4dp"	    
	        app:lineColor="@color/color_blue"
	        android:layout_marginRight="20dp"
	        android:layout_alignParentRight="true"
	        android:layout_marginTop="25dp"
	        app:dashOrientation="0"
	        app:lineHeight="1dp"/>    
	           <ImageView 
	            android:layout_width="8dp"
	            android:layout_height="8dp"
	            android:src="@mipmap/icon_left_blue"
	            android:layout_marginTop="21dp"
	            android:layout_alignParentLeft="true"/>
        
    </RelativeLayout>

</LinearLayout>
