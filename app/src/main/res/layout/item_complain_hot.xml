<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_rectangle_white_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
             android:id="@+id/complain_hot_item_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/corner_rectangle_deepgreen_bg"
            android:padding="3dp"
            android:text="333"
            android:textColor="@color/color_white" />

        <TextView
             android:id="@+id/complain_hot_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="11111111"
            android:textColor="@color/color_blue" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/corner_rectangle_white_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <LinearLayout
            android:background="@drawable/corner_rectangle_lightgray2_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【投诉现象】"
                android:drawableLeft="@drawable/widget_left_icon_small"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/complain_hot_item_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22222222" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_marginTop="6dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【问题原因】"
                android:drawableLeft="@drawable/widget_left_icon_small"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/complain_hot_item_reason"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22222222" />
        </LinearLayout>
        
        <LinearLayout
             android:layout_marginTop="6dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="【解决进度】"
                android:drawableLeft="@drawable/widget_left_icon_small"
                android:textStyle="bold" />
            
            <TextView
                android:id="@+id/complain_hot_item_progress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="22222222" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>