<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_gray" />

        <View
            android:id="@+id/produce_line_moneyout_state"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:background="@drawable/oval_blue" />

        <View
            android:layout_width="1px"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@color/color_gray" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5" >

        <TextView
            android:id="@+id/produce_line_moneyout_type"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/icon_produce_line_blue"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="222222"
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_mini_size" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:layout_weight="4.5"
        android:background="@drawable/corner_rectangle_lightgray2_bg"
        android:orientation="horizontal"
        android:padding="5dp" >

        <ImageView
            android:padding="1dp"
            android:id="@+id/produce_line_moneyout_lightbulb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/icon_produce_line_light" />

        <TextView
            android:id="@+id/produce_line_moneyout_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="11111111111111"
            android:textSize="@dimen/default_mini_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/produce_line_moneyout_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.8"
        android:background="@drawable/corner_rectangle_lightblue_bg"
        android:gravity="center"
        android:text="2222\n111"
        android:padding="5dp"
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_mini_size" />

</LinearLayout>