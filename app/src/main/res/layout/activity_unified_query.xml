<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <include layout="@layout/common_title"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lt_item1"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@color/color_gray2"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/default_large_size"
                    android:text="主机查询"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:layout_gravity="center"
                    android:textSize="@dimen/default_ssmall_size"
                    android:text="运维资产主机查询"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lt_item2"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@color/color_gray2"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/default_large_size"
                    android:text="用户查询"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:layout_gravity="center"
                    android:textSize="@dimen/default_ssmall_size"
                    android:text="智维app用户查询"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/lt_item3"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:background="@color/color_gray2"
                android:orientation="vertical">
                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textSize="@dimen/default_large_size"
                    android:text="月指标录入"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"

                    android:layout_gravity="center"
                    android:textSize="@dimen/default_ssmall_size"
                    android:text="投诉运营指标录入"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:visibility="gone"
                android:background="@color/color_gray"
                android:orientation="vertical">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>