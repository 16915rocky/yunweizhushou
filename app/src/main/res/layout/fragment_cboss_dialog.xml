<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="新增或修改备注" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp" 
        android:background="@drawable/corner_rectangle_lightgray2_bg2">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:background="@drawable/demand_deepblue_bg" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:background="@drawable/demand_deepblue_bg" />

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="100dp"
            android:background="@drawable/demand_deepblue_bg" />

        <View
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/demand_deepblue_bg" />
        
        <EditText 
            android:id="@+id/diglog_editText"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:textSize="@dimen/default_mini_size"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:text="发的方法"
            android:gravity="left|top"
             />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
       
        android:layout_marginBottom="10dp" >

        <TextView
            android:id="@+id/tv1"
            android:layout_marginTop="6dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg3"
            android:gravity="center"
            android:text="确定"
            android:textSize="@dimen/default_mini_size" />
         <TextView
            android:id="@+id/tv2"
            android:layout_marginTop="6dp"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg3"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:text="取消"
            android:textSize="@dimen/default_mini_size" />
    </RelativeLayout>

</LinearLayout>