<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="0.8" >

            <TextView
                android:layout_gravity="center"
                android:id="@+id/new_calendar_detail_level"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/oval_red"
                android:gravity="center"
                android:text="高"
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_ssmall_size" />
        </FrameLayout>

        <TextView
            android:id="@+id/new_calendar_detail_type"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="服务"
            android:textColor="@color/color_dark"/>

        <TextView
            android:id="@+id/new_calendar_detail_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:textSize="@dimen/default_mini_size"
            android:gravity="center"
            android:text="服服务服务服务服务" />
        
         <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/icon_person_setting"
			android:layout_gravity="center"/>

        <TextView
            android:id="@+id/new_calendar_detail_person"
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_lightblue"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>


</LinearLayout>