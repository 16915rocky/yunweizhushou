<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
    <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:id="@+id/moneyout_check_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="10dp"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="5"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:lineSpacingExtra="2dp"
            android:text="酬金预出账日期为每月24~27日\n酬金正式出账日期为每月1~3日"
            android:textSize="@dimen/default_ssmall_size" >
        </TextView>
    </LinearLayout>

    <ListView
        android:id="@+id/moneyout_check_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </ListView>

</LinearLayout>