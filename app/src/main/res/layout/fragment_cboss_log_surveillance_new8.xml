<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <RelativeLayout
        android:layout_width="81dp"
        android:layout_height="match_parent"
        >
         <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                app:dashOrientation="1"
                app:dashWidth="2dp"
                android:layout_marginLeft="20dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
         
            <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="10dp"
                android:layout_height="15dp"
                app:dashOrientation="1"
                app:dashWidth="2dp"
                android:layout_marginLeft="80dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
    </RelativeLayout>
    <RelativeLayout 
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="match_parent">
             <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                android:layout_marginTop="15dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
             <ImageView 
                 android:layout_width="8dp"
                 android:layout_height="8dp"
                 android:src="@mipmap/icon_right_blue"
                   android:layout_marginTop="12dp"
                   android:layout_alignParentRight="true"
                 />
      
  </RelativeLayout>
    
    <LinearLayout 
        android:layout_width="40dp"
        android:layout_height="68dp"
        android:orientation="vertical"
        android:gravity="center">
        	   <ImageView 
        	       android:id="@+id/img_new8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/icon_shujukushili"/>
        	   <TextView 
        	       android:layout_width="wrap_content"
        	       android:layout_height="wrap_content"
        	       android:text="Cboss数据库"
        	       android:textSize="@dimen/default_mini_size"
        	       android:gravity="center"
        	       />
        	   
    </LinearLayout>
  <RelativeLayout 
      android:layout_weight="1"
      android:layout_width="0dp"
      android:layout_height="match_parent">
        	   <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                app:dashOrientation="0"
                app:dashWidth="2dp"
                android:layout_marginTop="15dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
        	     <ImageView 
                 android:layout_width="8dp"
                 android:layout_height="8dp"
                 android:src="@mipmap/icon_left_blue"
                   android:layout_marginTop="12dp"
              
                 />
      
  </RelativeLayout>
      <RelativeLayout 
        android:layout_width="81dp"
        android:layout_height="match_parent">
        	 
        	    <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="10dp"
                android:layout_height="15dp"
                app:dashOrientation="1"
                app:dashWidth="2dp"
                 android:layout_alignParentRight="true"
                android:layout_marginRight="79dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
        	    
        	     <com.chinamobile.yunweizhushou.view.DashView
                android:layout_width="10dp"
                android:layout_height="match_parent"
                app:dashOrientation="1"
                app:dashWidth="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                app:lineColor="@color/color_blue"
                app:lineHeight="1dp"
                app:lineWidth="4dp" />
        	    
        
    </RelativeLayout>

</LinearLayout>
