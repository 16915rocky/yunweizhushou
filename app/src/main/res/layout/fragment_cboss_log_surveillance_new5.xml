                android:textSize="@dimen/default_mini_size" />

          
        </LinearLayout>
        
    </LinearLayout>

    <RelativeLayout
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:background="@color/color_gray2" >

        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/tv1_new5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="CBOSS"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:id="@+id/tv2_new5"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv1_new5"
            android:layout_centerHorizontal="true"
            android:text="0"
            android:textSize="@dimen/default_mini_size" />

        <com.chinamobile.yunweizhushou.view.WaveView
            android:id="@+id/waveview1_new5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="10.78.179.105\n10.78.221.39\n10.78.180.171\n10.78.221.250\n10.78.146.243"
