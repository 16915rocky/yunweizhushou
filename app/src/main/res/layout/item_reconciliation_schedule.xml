<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/color_lightgray2"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="2dp"
        android:background="@color/color_white"
        android:padding="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.4"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reconciliation_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="571"
                android:layout_marginLeft="10dp"
                android:textSize="@dimen/default_small_size" />

            <TextView
                android:id="@+id/reconciliation_subtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:gravity="left"
                android:text=""
                android:textColor="#90000000"
                android:textSize="@dimen/default_ssmall_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/reconciliation_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:paddingLeft="5dp"
                android:text="(17/29)"
                android:textSize="@dimen/default_ssmall_size" />

            <TextView
                android:id="@+id/reconciliation_state"
                android:layout_width="match_parent"
                android:layout_height="30dp"
               android:layout_marginTop="13dp"
               android:layout_marginLeft="5dp"
                android:text="正在运行"
                android:gravity="center"
                android:textColor="@color/color_white"
                android:background="@drawable/rect_round_gray"
                android:textSize="@dimen/default_small_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>