<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
  
  >
	
    <LinearLayout 
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="@drawable/corner_rectangle_white_bg2" 
     android:layout_margin="10dp"
     android:padding="10dp">
   <RelativeLayout 
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent">
       <TextView 
           android:id="@+id/oval"
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:background="@drawable/oval_gray"
           android:layout_centerHorizontal="true"
           android:gravity="center"
           android:textColor="@color/color_white"
           android:layout_centerVertical="true"/>
   </RelativeLayout>
   
   <LinearLayout 
       android:layout_width="0dp"
       android:layout_weight="2"
       android:layout_height="70dp"
       android:orientation="vertical"
       android:gravity="center">
       <TextView 
           android:id="@+id/tv11"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="0.5"
           android:textSize="@dimen/default_mini_size" 
           android:gravity="center"
           android:text="主机IP"/>
       
       <RelativeLayout 
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1">
            <TextView 
           android:id="@+id/tv1"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:gravity="center"
           android:text="10.79.21213"
           android:textSize="@dimen/default_xlarge_size"
           android:layout_alignParentTop="true"/>
           
       </RelativeLayout>
      
   </LinearLayout>
   
   <LinearLayout 
       android:layout_width="0dp"
       android:layout_weight="1"
       android:layout_height="match_parent"
       android:orientation="vertical"
       android:gravity="center">
       <TextView 
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="0.5"
           android:gravity="center"
           android:text="错误量"
           android:textSize="@dimen/default_mini_size" />
       <TextView 
           android:id="@+id/tv2"
           android:layout_width="wrap_content"
           android:layout_height="0dp"
           android:layout_weight="1"
           android:gravity="center"
           android:text="105"
           android:textSize="@dimen/default_xxxlarge_size"
           />
   </LinearLayout>
        
    </LinearLayout>   
   
  
   
</LinearLayout>