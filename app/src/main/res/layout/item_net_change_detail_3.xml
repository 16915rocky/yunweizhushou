<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/net_change_detail_3_item1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/corner_rectangle_deepblue_bg"
                            android:gravity="center"
                            android:minLines="2"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:text="有效\n缺陷"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/default_mini_size" 
                            android:padding="3dp"/>

                        <TextView
                            android:id="@+id/net_change_detail_3_item2"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/corner_rectangle_deepblue_bg"
                            android:gravity="center"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:text="已解决"
                            android:textColor="@color/color_white"
                            android:textSize="@dimen/default_mini_size" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/net_change_detail_3_item3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="3dp"
                        android:background="@drawable/corner_rectangle_deepblue_bg"
                        android:gravity="center"
                        android:paddingBottom="3dp"
                        android:paddingTop="3dp"
                        android:text="非功能验收"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/default_mini_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/net_change_detail_3_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="问题描述:"
                    android:textSize="@dimen/default_mini_size" />

                <com.chinamobile.yunweizhushou.view.FlexibleTextView
                    android:id="@+id/net_change_detail_3_desc"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="解决进展:"
                    android:textSize="@dimen/default_mini_size" />

                <com.chinamobile.yunweizhushou.view.FlexibleTextView
                    android:id="@+id/net_change_detail_3_progress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="改进措施:"
                    android:textSize="@dimen/default_mini_size" />

                <com.chinamobile.yunweizhushou.view.FlexibleTextView
                    android:id="@+id/net_change_detail_3_method"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="责任方:"
                    android:textSize="@dimen/default_mini_size" />

                <com.chinamobile.yunweizhushou.view.FlexibleTextView
                    android:id="@+id/net_change_detail_3_person"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>