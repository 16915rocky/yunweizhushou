<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/net_change_detail_2_bug"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:minLines="2"
                    android:background="@drawable/corner_rectangle_deepblue_bg"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="有效\n缺陷"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_mini_size" />

                <TextView
                    android:id="@+id/net_change_detail_2_solve"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/corner_rectangle_deepblue_bg"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:text="已解决"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_mini_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/net_change_detail_2_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="3dp"
                android:background="@drawable/corner_rectangle_deepblue_bg"
                android:gravity="center"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="非功能验收"
                android:textColor="@color/color_white"
                android:textSize="@dimen/default_mini_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/net_change_detail_2_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="center"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="问题描述:"
            android:textSize="@dimen/default_mini_size" />

        <com.chinamobile.yunweizhushou.view.FlexibleTextView
            android:id="@+id/net_change_detail_2_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="解决进展:"
            android:textSize="@dimen/default_mini_size" />

        <com.chinamobile.yunweizhushou.view.FlexibleTextView
            android:id="@+id/net_change_detail_2_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="引入缺陷需求"
            android:textSize="@dimen/default_mini_size" />

        <com.chinamobile.yunweizhushou.view.FlexibleTextView
            android:id="@+id/net_change_detail_2_require"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="引入缺陷\n需求管理员"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:id="@+id/net_change_detail_2_person1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="缺陷开发\n人员"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:id="@+id/net_change_detail_2_person2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:gravity="center"
            android:padding="5dp"
            android:textSize="@dimen/default_mini_size" />
    </LinearLayout>

</LinearLayout>