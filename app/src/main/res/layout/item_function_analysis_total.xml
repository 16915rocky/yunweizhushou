<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center" >

        <TextView
            android:id="@+id/function_analysis_list_tag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/oval_red"
            android:gravity="center"
            android:text=""
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_mini_size" />
    </LinearLayout>

    <TextView
        android:id="@+id/function_analysis_list_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:gravity="center"
        android:text=""
        android:textColor="@color/color_dark"
        android:textSize="@dimen/default_ssmall_size" />

    <TextView
        android:id="@+id/function_analysis_list_state"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="@drawable/rect_lightgreen_bg"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_ssmall_size" />

</LinearLayout>