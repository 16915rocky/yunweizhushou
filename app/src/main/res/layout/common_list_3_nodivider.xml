<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title"
        android:id="@+id/lt_title" />
    
    <LinearLayout
        android:id="@+id/common_list_3_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lightgray2"
        android:orientation="horizontal"
        android:padding="3dp" >

        <EditText
            android:id="@+id/search_edittext"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="4"
            android:background="@drawable/corner_rectangle_white_bg2"
            android:drawableLeft="@mipmap/icon_search"
            android:gravity="center_vertical"
            android:hint="请输入服务关键字"
            android:padding="3dp"
            android:singleLine="true"
            android:textSize="@dimen/default_ssmall_size" />

        <TextView
            android:id="@+id/search_btn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:background="@drawable/corner_rectangle_lightgray_bg"
            android:gravity="center"
            android:padding="3dp"
            android:text="搜索"
            android:textColor="@color/color_white"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
          android:background="@color/color_lightblue"
        android:orientation="horizontal">
         <TextView
        android:id="@+id/list_title_4_item1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="111"
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_ssmall_size" />
    <TextView
        android:id="@+id/list_title_4_item2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="111"
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_ssmall_size" />
    <TextView
        android:id="@+id/list_title_4_item3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="111"
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_ssmall_size" />
    <TextView
        android:id="@+id/list_title_4_item4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:gravity="center"
        android:padding="5dp"
        android:text=""
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>


    <ListView
        android:id="@+id/common_list_4_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
         >
    </ListView>

</LinearLayout>