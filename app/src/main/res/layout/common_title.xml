<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/titleid">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/color_lightblue" >

        <ImageButton
            android:id="@+id/title_left_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:background="@null"
            android:padding="10dp"
            android:src="@mipmap/ic_white_back"
            android:visibility="gone" />

        <TextView
            android:id="@+id/title_middle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:maxEms="10"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textSize="@dimen/default_large_size" />

        <EditText
            android:id="@+id/title_middle_search"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:background="@drawable/edittext_bg"
            android:padding="5dp"
            android:textSize="@dimen/default_small_size"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/title_right_button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@null"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/title_right_button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/title_right_button1"
            android:background="@null"
            android:visibility="gone" />
        <TextView 
            android:id="@+id/title_right_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="@dimen/default_middle_size"
            android:textColor="@color/color_white"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>