<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
     <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shengneiliuliangtongfu_item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="实时"
            android:textSize="@dimen/default_middle_size"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/shengneiliuliangtongfu_item2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="出账"
            android:textSize="@dimen/default_middle_size" />
    </LinearLayout>

    <View
        android:id="@+id/flow_province_bottombar"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/color_lightblue" />

    <android.support.v4.view.ViewPager
        android:id="@+id/flow_province_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>