<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/common_title"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:background="@color/color_blue"
                    android:id="@+id/tv_busdeid" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="212"
                    android:id="@+id/tv_basesummary" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/color_lightgray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR专业方向："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_major_field"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:padding="5dp"
                    android:text="SR专业子类："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_professional_subcategories"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_rectangle_lightgray2_bg"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/widget_left_icon_large_blue2"
                    android:text="描述："
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_demandes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="需求状态"
                        android:textSize="@dimen/default_ssmall_size" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/demand_green_bg"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="@color/color_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="优先级"
                        android:textSize="@dimen/default_ssmall_size" />

                    <TextView
                        android:id="@+id/tv_priority"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/demand_violet_bg"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="@color/color_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="重要度"
                        android:textSize="@dimen/default_ssmall_size" />

                    <TextView
                        android:id="@+id/tv_important"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/demand_deepblue_bg"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="@color/color_white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="关注人"
                        android:textSize="@dimen/default_ssmall_size" />

                    <TextView
                        android:id="@+id/tv_attention"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:background="@drawable/demand_orange_bg"
                        android:gravity="center"
                        android:paddingBottom="15dp"
                        android:paddingLeft="2dp"
                        android:paddingRight="2dp"
                        android:paddingTop="15dp"
                        android:text=""
                        android:textColor="@color/color_white" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/color_lightgray2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="BR需求申请人 :"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_demander"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="BR需求来源："
                    android:textSize="@dimen/default_ssmall_size"
                    android:id="@+id/tv_demandoridin" />

                <TextView
                    android:id="@+id/planer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="BR申请时间："
                    android:textSize="@dimen/default_ssmall_size"
                    android:id="@+id/tv_decommittime" />

                <TextView
                    android:id="@+id/realizationWay"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="BR需求管理局："
                    android:textSize="@dimen/default_ssmall_size"
                    android:id="@+id/tv_deadmini" />

                <TextView
                    android:id="@+id/workingHours"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="10dp"
                android:background="@color/color_lightgray2" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_height="match_parent"
                    android:background="@color/color_blue"
                    android:id="@+id/tv_swdeid" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="212"
                    android:id="@+id/tv_srbasesummary" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/corner_rectangle_lightgray2_bg"
                android:orientation="horizontal"
                android:padding="5dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/widget_left_icon_large_blue2"
                    android:text="描述："
                    android:drawablePadding="5dp"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_srdemandes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR创建时间："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_createtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR需求分类："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_demandclassifl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR需求子类："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_requirementsubsys"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR预计工时："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_estimatedtime"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="SR初步承诺时间："
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/tv_pri_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:background="@drawable/corner_rectangle_lightgray2_bg"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text=""
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>




        </LinearLayout>
    </ScrollView>

</LinearLayout>