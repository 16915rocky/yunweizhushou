<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app ="http://schemas.android.com/apk/res-auto"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >
    
    
      <LinearLayout 
        android:layout_width="100dp"
        android:layout_height="50dp"
          android:gravity="end">
        <TextView 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="DNS"
            android:gravity="center"
            android:textSize="@dimen/default_ssmall_size"
            android:background="@color/color_gray2"/>
    </LinearLayout>
    
    <RelativeLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="50dp">
        	<com.chinamobile.yunweizhushou.view.DashView
	        android:layout_width="match_parent"
	        android:layout_height="10dp"
	        app:dashWidth="2dp"
	        app:lineWidth="4dp"	    
	        android:layout_centerVertical="true"
	        app:lineColor="@color/color_blue"
	        app:dashOrientation="0"
	        app:lineHeight="1dp"/>    
	          <ImageView 
           android:layout_width="10dp"
           android:layout_height="10dp"
           android:layout_centerVertical="true"
           android:layout_alignParentRight="true"
           android:src="@mipmap/icon_right_blue"/>
	          <TextView 
	              android:layout_width="wrap_content"
	              android:layout_height="wrap_content"
	              android:text="落地"
	              android:layout_marginTop="4dp"
	              android:layout_centerHorizontal="true"
	                  android:textSize="@dimen/default_mini_size"
	             />	
    </RelativeLayout>
      <LinearLayout 
        android:layout_width="100dp"
        android:layout_height="50dp"
          android:gravity="start">
        <TextView 
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:text="负载均载"
            android:gravity="center"
                android:textSize="@dimen/default_ssmall_size"
            android:background="@color/color_gray2"/>
    </LinearLayout>

</LinearLayout>
