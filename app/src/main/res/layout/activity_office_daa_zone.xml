<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rule_item1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="局数据\n采集"
                android:textSize="@dimen/default_ssmall_size"
                 />
            <TextView
                android:id="@+id/rule_item2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="局数据\n发布稽核"
                android:textSize="@dimen/default_ssmall_size"
                 />

            <TextView
                android:id="@+id/rule_item3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="局数据\n文件接收"
                android:textSize="@dimen/default_ssmall_size"
                />

            <TextView
                android:id="@+id/rule_item4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="集团\n增量稽核"
                android:textSize="@dimen/default_ssmall_size"
                />
            <TextView
                android:id="@+id/rule_item5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="手工制作\n稽核"
                android:textSize="@dimen/default_ssmall_size"
                />
        </LinearLayout>

        <View
            android:id="@+id/rule_bottom_bar"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/falut_item_color_s"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <com.chinamobile.yunweizhushou.view.MyViewPager
        android:id="@+id/rule_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </com.chinamobile.yunweizhushou.view.MyViewPager>

</LinearLayout>