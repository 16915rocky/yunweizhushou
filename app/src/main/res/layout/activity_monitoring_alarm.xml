<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
     

    <com.chinamobile.yunweizhushou.view.BottomScrollView
        android:id="@+id/ama_scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"    
        android:scrollbars="none"
       >   <!-- android:fadingEdge="none"
        android:overScrollMode="never" -->
         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:focusable="true"  
            android:focusableInTouchMode="true" 
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="5dp"
            android:gravity="center" >

            <com.chinamobile.yunweizhushou.view.DashboardView
                android:id="@+id/dashboard_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bigSliceCount="10"
                app:headerRadius="40dp"
                app:headerTextSize="20sp"
                app:headerTitle="得分"
                app:maxValue="100"
                app:measureTextSize="10sp"
                app:radius="80dp"
                app:realTimeValue="50"
                app:sliceCountInOneBigSlice="11"
                app:startAngle="120"
                app:stripeMode="inner"
                app:stripeWidth="10dp"
                app:sweepAngle="300"
                app:textColor="#030303" >
            </com.chinamobile.yunweizhushou.view.DashboardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/choose_gaojing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_gaojing2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="告警" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/choose_xingneng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_xingneng2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="性能" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/choose_duixiangjuzheng"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/icon_duixiangjuzheng" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="对象矩阵" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/strangle1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@mipmap/icon_strangle3" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/strangle2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_strangle3"
                    android:visibility="gone" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/strangle3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/icon_strangle3"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigationBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray2"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/chooselt1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_rectangle_deepblue_bg2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/alarm_tv1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/alarm_tv1_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="严重告警" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/chooselt2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/alarm_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/alarm_tv2_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="主要告警" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1.5"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/chooselt3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/alarm_tv3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="29"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/alarm_tv3_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="一般告警" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/navigationBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/color_gray2"
            android:orientation="horizontal"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:visibility="gone" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/yewuceng_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/corner_rectangle_deepblue_bg2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/yewuceng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/yewuceng_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="业务层" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/jiekouceng_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/jiekouceng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/jiekouceng_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="接口层" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/yingyongceng_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/yingyongceng_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/yingyongceng_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="应用层" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/db_lt"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="3dp" >

                    <TextView
                        android:id="@+id/db_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="@dimen/default_xxlarge_size" />

                    <TextView
                        android:id="@+id/db_tv2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DB层" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="700dp"
            android:orientation="vertical"
           
           >
			<TextView 			  
			    android:id="@+id/warning_tv1"
			      android:layout_marginTop="50dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="当前无此类告警记录"
			    android:gravity="center"
			    android:textSize="@dimen/default_xxlarge_size"
			    android:textColor="@color/color_gray2"
			    android:visibility="gone"/>
		    <TextView 
		        
			    android:id="@+id/warning_tv2"
			     android:layout_marginTop="50dp"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:text="当前无此类波动图"
			    android:gravity="center"
			    android:textSize="@dimen/default_xxlarge_size"
			    android:textColor="@color/color_gray2"
			    android:visibility="gone"/>
            <ListView
                android:id="@+id/monitoring_alarm_listView"
                android:layout_width="match_parent"
                android:layout_height="700dp"
                android:divider="@null"
                android:scrollbars="none"
                >
            </ListView>
        </LinearLayout>
       </LinearLayout> 
    </com.chinamobile.yunweizhushou.view.BottomScrollView>
   

</LinearLayout>