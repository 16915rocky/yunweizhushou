<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
	
    <LinearLayout 
      android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
     android:background="@drawable/corner_rectangle_white_bg2" 
     android:layout_margin="10dp"
     android:padding="10dp">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">
        
        <TextView 
            android:id="@+id/logzone_table3_tv1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="错误量"
            android:gravity="center"
            android:textSize="@dimen/default_mini_size"
           />
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"     
             android:gravity="center">
               <TextView 
             android:id="@+id/logzone_table3_tv2"
            android:layout_width="match_parent"
          android:layout_height="match_parent"
            android:text="700"
          android:layout_alignParentBottom="true"
             android:gravity="center"
             android:textSize="@dimen/default_xxxlarge_size"/>
        </RelativeLayout>
       
    </LinearLayout>
      <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:gravity="center">
        
       <RelativeLayout 
           android:layout_width="match_parent"
           android:layout_height="match_parent">
           
           <View 
               android:id="@+id/view1"
               android:layout_width="2dp"
               android:layout_height="match_parent"
               android:background="@color/color_black"
               android:layout_centerVertical="true"
               />
          	<TextView 
          	    android:id="@+id/logzone_table3_tv3"
          	    android:layout_marginLeft="5dp"
          	    android:layout_width="wrap_content"
          	    android:layout_height="wrap_content"
          	    android:text="11232123123"
          	    android:layout_toRightOf="@+id/view1"
          	    
          	    android:textSize="@dimen/default_ssmall_size"/> 
           
       </RelativeLayout>
    </LinearLayout>
        
    </LinearLayout>   
   
  
   
</LinearLayout>