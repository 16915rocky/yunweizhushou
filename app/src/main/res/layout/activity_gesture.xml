<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/gesture_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="25dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="name"
        android:textSize="@dimen/default_large_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/gesture_hint"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp"
        android:text="please input the gesture"
        android:textSize="@dimen/default_middle_size" />

    <com.chinamobile.yunweizhushou.view.GesturePatternView
        android:id="@+id/gestureview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10" />

    <TextView
        android:id="@+id/gesture_forget"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:text="忘记手势"
        android:textColor="@color/color_red"
        android:textSize="@dimen/default_ssmall_size" />

</LinearLayout>