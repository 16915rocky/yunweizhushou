<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <include layout="@layout/item_function_analysis_total" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="5dp"
        android:background="@color/color_lightgray2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corner_rectangle_white_bg"
        android:orientation="vertical"
        android:padding="5dp" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="性能波动趋势："
            android:textColor="@color/color_dark"
            android:textSize="@dimen/default_mini_size" />

        <TextView
            android:visibility="gone"
            android:id="@+id/function_analysis_detail_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text=""
            android:textColor="@color/color_dark"
            android:textSize="@dimen/default_mini_size" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/function_analysis_detail_chart"
            android:layout_width="match_parent"
            android:layout_height="200dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提出时间:"
                    android:textColor="@color/color_dark"
                    android:textSize="@dimen/default_mini_size" />

                <TextView
                    android:id="@+id/function_analysis_detail_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/corner_rectangle_lightgray_bg"
                    android:padding="4dp"
                    android:text="212131"
                    android:textColor="@color/color_dark"
                    android:textSize="@dimen/default_mini_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="进度状态:"
                    android:textColor="@color/color_dark"
                    android:textSize="@dimen/default_mini_size" />

                <TextView
                    android:id="@+id/function_analysis_detail_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:background="@drawable/corner_rectangle_lightgray_bg"
                    android:padding="4dp"
                    android:text="212131"
                    android:textColor="@color/color_dark"
                    android:textSize="@dimen/default_mini_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_rectangle_lightgray_bg"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/widget_left_icon_large_blue2"
                android:text="原因分析:"
                android:textColor="@color/color_dark"
                android:textSize="@dimen/default_ssmall_size" />

            <TextView
                android:id="@+id/function_analysis_detail_reason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析"
                android:textSize="@dimen/default_ssmall_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_rectangle_lightgray_bg"
            android:gravity="start"
            android:orientation="horizontal"
            android:padding="5dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/widget_left_icon_large_blue2"
                android:text="优化措施:"
                android:textColor="@color/color_dark"
                android:textSize="@dimen/default_ssmall_size" />

            <TextView
                android:id="@+id/function_analysis_detail_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:text="原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析原因分析"
                android:textSize="@dimen/default_ssmall_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>