<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:textSize="@dimen/default_large_size"
        android:layout_margin="8dp"
        android:text="1/10"
        android:textColor="@color/color_blue"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/default_large_size"
            android:gravity="center"
            android:text="数据库名:"/>
        <TextView
            android:id="@+id/tv_answer_dbname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/default_large_size"
            android:gravity="center"
            android:text="数据库用户名:"/>
        <TextView
            android:id="@+id/tv_answer_db_username"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="6dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/default_large_size"
            android:gravity="center"
            android:text="数据库表名:"/>
        <TextView
            android:id="@+id/tv_answer_db_tablename"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="xxx"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/default_large_size"
        android:gravity="start"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="8dp"
        android:text="请填写表说明:"/>
    <EditText
        android:id="@+id/et_answer_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/corner_rectangle_blue_stroke_bg"
        android:textCursorDrawable="@drawable/edit_cursor_color"
        android:gravity="start"/>
</LinearLayout>