<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
     <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <LinearLayout
            android:id="@+id/level_standard_level1_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_level_1"
                android:gravity="center"
                android:text="级"
                android:textColor="@color/color_yellow"
                android:textSize="@dimen/default_middle_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_standard_level2_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_level_2"
                android:gravity="center"
                android:text="级"
                android:textColor="@color/color_orange"
                android:textSize="@dimen/default_middle_size" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/level_standard_level3_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_level_3"
                android:gravity="center"
                android:text="级"
                android:textColor="@color/color_violet"
                android:textSize="@dimen/default_middle_size" />
        </LinearLayout>

        <LinearLayout
            android:visibility="visible"
            android:id="@+id/level_standard_level4_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_level_4"
                android:gravity="center"
                android:text="级"
                android:textColor="@color/color_red"
                android:textSize="@dimen/default_middle_size" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/level_standard_bottom_layout"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/color_lightblue" />

    <TextView
        android:id="@+id/level_standard_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lightgray2"
        android:padding="5dp"
        android:text="数据截止2016年6月20日"
        android:textColor="@color/color_dark"
        android:textSize="@dimen/default_ssmall_size" />

    <android.support.v4.view.ViewPager
        android:id="@+id/level_standard_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>