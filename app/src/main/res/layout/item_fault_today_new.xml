<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/corner_rectangle_white_bg"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="5dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fault_today_new_num"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:background="@drawable/oval_blue"
                    android:gravity="center"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/default_mini_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/fault_today_new_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:gravity="center_vertical"
                android:maxLines="2"
                android:paddingRight="15dp"
                android:text="关于渠道无法办理的问题"
                android:textColor="@color/color_dark"
                android:textSize="@dimen/default_small_size" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="3dp"
            android:background="@color/color_lightgray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="故障等级"
                    android:textColor="@color/color_deepblue"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/fault_today_new_level"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/oval_gray"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="五级"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="故障状态"
                    android:textColor="@color/color_deepblue"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/fault_today_new_state"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/oval_green"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="调度中"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_small_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:text="故障来源"
                    android:textColor="@color/color_deepblue"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/fault_today_new_source"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/oval_violet"
                    android:gravity="center"
                    android:padding="3dp"
                    android:text="地市"
                    android:textColor="@color/color_white"
                    android:textSize="@dimen/default_small_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="故障历时"
                    android:textColor="@color/color_deepblue"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/fault_today_new_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:background="@drawable/corner_rectangle_lightgray2_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text="3：40"
                android:textColor="@color/color_deepblue"
                android:textSize="@dimen/default_ssmall_size" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/corner_rectangle_lightgray2_bg2"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="故障标准"
                    android:textColor="@color/color_deepblue"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <TextView
                android:id="@+id/fault_today_new_standard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_weight="2"
                android:background="@drawable/corner_rectangle_lightgray2_bg2"
                android:gravity="center"
                android:padding="5dp"
                android:text="投诉 (3, 30]"
                android:textColor="@color/color_deepblue"
                android:textSize="@dimen/default_ssmall_size" />
        </LinearLayout>

        <TextView
            android:id="@+id/fault_today_new_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/corner_rectangle_lightgray2_bg2"
            android:maxLines="3"
            android:padding="5dp"
            android:text="故障进度：\n"
            android:textColor="@color/color_dark"
            android:textSize="@dimen/default_ssmall_size" />
    </LinearLayout>

</LinearLayout>