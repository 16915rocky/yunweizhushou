<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />

    <TextView
        android:id="@+id/net_change_change_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_white"
        android:drawableLeft="@drawable/widget_left_icon_large_blue"
        android:gravity="center_vertical"
        android:padding="2dp"
        android:text="设计上线步骤" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/color_gray" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/net_change_change_syslist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_lightgray2"
                android:gravity="center"
                android:padding="5dp"
                android:text="系统清单"
                android:textSize="@dimen/default_mini_size" />

            <com.chinamobile.yunweizhushou.view.FlowLayout
                android:background="@color/color_white"
                android:id="@+id/net_change_change_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            </com.chinamobile.yunweizhushou.view.FlowLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_lightgray2"
                android:gravity="center"
                android:padding="5dp"
                android:text="关注点"
                android:textSize="@dimen/default_mini_size" />

            <EditText
                android:id="@+id/net_change_change_concern"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:gravity="start"
                android:hint="如有需要输入该环节关注点,请填写"
                android:minHeight="50dp"
                android:padding="5dp"
                android:textSize="@dimen/default_mini_size" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp" >

                <TextView
                    android:id="@+id/net_change_change_disagree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click_selector2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="不同意"
                    android:textColor="@color/color_white" />

                <TextView
                    android:id="@+id/net_change_change_agree"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/button_click_selector2"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="同意"
                    android:textColor="@color/color_white" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>