<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="5dp" >

    <TextView
        android:id="@+id/moneyout_check_num"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/oval_light_blue"
        android:gravity="center"
        android:text="11"
        android:textColor="@color/color_white"
        android:textSize="@dimen/default_mini_size" />

    <TextView
        android:id="@+id/moneyout_check_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="111"
        android:textSize="@dimen/default_ssmall_size" />

    <com.chinamobile.yunweizhushou.view.MyAnimateProgressBar
        android:id="@+id/moneyout_check_progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="20dp"
        android:layout_weight="1"
        android:progressDrawable="@drawable/moneyout_progress" />

    <TextView
        android:id="@+id/moneyout_check_percent"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="10%"
        android:textSize="@dimen/default_ssmall_size" />

</LinearLayout>