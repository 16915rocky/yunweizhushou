<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
 
   >

    <TextView
        android:id="@+id/list_3_item1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:layout_margin="5dp"
        android:text="111111111111111"
        android:textSize="@dimen/default_ssmall_size" />

    <TextView
        android:id="@+id/list_3_item2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:layout_margin="5dp"
        android:text="111"
        android:textSize="@dimen/default_ssmall_size" />

    <TextView
        android:id="@+id/list_3_item3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:maxLines="2"
        android:minLines="2"
        android:layout_margin="5dp"
        android:text="111"
        android:textSize="@dimen/default_ssmall_size" />
     <LinearLayout 
         android:layout_width="0dp"
         android:layout_weight="0.5"
         android:gravity="center"
         android:layout_height="match_parent">
          <ImageView
        android:id="@+id/list_3_item4"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:gravity="center"
        android:src="@mipmap/ic_arrow_right_black"
        android:layout_margin="5dp"
        android:textSize="@dimen/default_ssmall_size" />
     </LinearLayout>

</LinearLayout>