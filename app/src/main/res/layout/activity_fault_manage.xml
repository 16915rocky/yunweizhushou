<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
    <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/color_lightgray2"
        android:orientation="horizontal"
        android:padding="2dp" >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.3"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="2dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="当月累计故障数"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/fault_current_mouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2"
                    android:textColor="@color/color_lightblue"
                    android:textSize="@dimen/default_xlarge_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="起"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
 
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="当年累计故障中断时长"
                    android:textSize="@dimen/default_ssmall_size" />

                <TextView
                    android:id="@+id/fault_current_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="2dp"
                    android:text="2.76"
                    android:textColor="@color/color_lightblue"
                    android:textSize="@dimen/default_xlarge_size" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="小时"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#ccc"
            android:paddingTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="3dp"
            android:gravity="center"
            android:text="挑\n战\n值"
            android:textSize="@dimen/default_mini_size"
            android:textColor="@color/color_lightblue" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="5dp" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fault_st_mouth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="111"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/default_large_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="起/月"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:visibility="gone"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/fault_st_year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#ccc"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="11"
                    android:textColor="#ffffff"
                    android:textSize="@dimen/default_large_size"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="小时/年"
                    android:textSize="@dimen/default_ssmall_size" />
            </LinearLayout> 
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lightgray2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/fault_item_today"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="客服\n热点"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fault_item_recent"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="今日"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fault_item_unsolve"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="历史\n未结"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />
            
            <TextView
                android:id="@+id/fault_item_service"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="月度\n情况"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fault_item_typical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="风险\n预警"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/fault_item_follow"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="重点\n故障"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />
            <TextView
                android:id="@+id/fault_item_operation"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="3dp"
                android:text="故障\n运营"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:id="@+id/fault_bottom_bar"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/falut_item_color_s"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fault_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>