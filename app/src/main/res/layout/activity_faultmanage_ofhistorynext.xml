<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <include layout="@layout/common_title"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        
      <LinearLayout 
          android:id="@+id/fmohnext_table1"
        android:layout_width="0dp"
  		android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/corner_rectangle_lightgray2_bg4">
        	<TextView 
        	    android:id="@+id/fmohnext_city"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="按地市"
        	    android:textSize="@dimen/default_middle_size"
        	    android:textColor="@color/color_white"
        	    android:gravity="center"/>
        	<ImageView 
        	    
        	    android:layout_width="25dp"
        	    android:layout_height="25dp"
        	    android:layout_marginLeft="5dp"
        	    
        	    android:src="@mipmap/icon_backlog_zong_bottom"
        	    />
  	  </LinearLayout>
  	  <LinearLayout 
  	    android:id="@+id/fmohnext_table2"
        android:layout_width="0dp"
  		android:layout_weight="2"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         android:gravity="center"
          android:layout_margin="5dp"
        android:background="@drawable/corner_rectangle_lightgray2_bg4">
        	<TextView 
        	    android:id="@+id/fmohnext_time"
        	    android:layout_width="wrap_content"
        	    android:layout_height="wrap_content"
        	    android:text="按时间"
        	    android:textSize="@dimen/default_middle_size"
        	    android:textColor="@color/color_white"
        	    android:gravity="center"/>
        	<ImageView         	    
        	    android:layout_width="25dp"
        	    android:layout_height="25dp"
        	    android:layout_marginLeft="5dp"        	    
        	    android:src="@mipmap/icon_backlog_zong_bottom"
        	    />
  	  </LinearLayout>
  	  <LinearLayout 
  	        android:id="@+id/fmohnext_query" 
        android:layout_width="0dp"
  		android:layout_weight="1.5"
        android:layout_height="match_parent"
        android:orientation="horizontal"
         android:gravity="center"
          android:layout_margin="5dp"
        android:background="@drawable/corner_rectangle_lightblue_bg"
        >
        	
  	      <TextView
  	        
  	          android:layout_width="wrap_content"
  	          android:layout_height="wrap_content"
  	          android:text="查询"
  	           android:gravity="center"
  	           android:textColor="@color/color_white"
        	   android:textSize="@dimen/default_middle_size"/>
  	  </LinearLayout>
    
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="30dp"
	    android:orientation="horizontal"
	    android:background="@color/color_lightblue"
	    android:gravity="center">
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="时间"
	        android:textColor="@color/color_white"
	         android:textSize="@dimen/default_middle_size"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="地市"
	         android:textSize="@dimen/default_middle_size"
	        android:textColor="@color/color_white"
	        android:gravity="center"/>
	    <TextView 
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:text="号码"
	        android:textSize="@dimen/default_middle_size"
	        android:textColor="@color/color_white"
	        android:gravity="center"/>
	</LinearLayout>
	<ListView 
	    android:id="@+id/fmohnext_listview"
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_weight="1">
	    
	</ListView>
</LinearLayout>
