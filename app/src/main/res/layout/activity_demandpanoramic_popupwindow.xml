<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    
    android:background="@drawable/corner_rectangle_white_bg2">
    <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:gravity="center">
         <TextView 
            android:id="@+id/popupwindow_tv1"
	        android:layout_width="70dp"
	        android:layout_height="30dp"
	        android:text="新版"
	          android:layout_margin="5dp"
	        android:gravity="center"
	        android:textColor="@color/color_blue"
	        android:textSize="@dimen/default_large_size"
	        android:background="@drawable/corner_rectangle_bold_stroke_blue"/>	
        
    </LinearLayout>
     <LinearLayout 
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="60dp"
        android:gravity="center">
         <TextView 
             android:id="@+id/popupwindow_tv2"
	        android:layout_width="70dp"
	        android:layout_height="30dp"
	        android:text="2017版"
	        android:layout_margin="5dp"
	        android:textColor="@color/color_white"
	        android:gravity="center"
	        android:textSize="@dimen/default_large_size"
	        android:background="@drawable/corner_rectangle_lightblue_bg"/>	
        
    </LinearLayout>
   
</LinearLayout>
