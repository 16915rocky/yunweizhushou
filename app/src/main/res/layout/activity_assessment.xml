<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
    <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:background="@color/color_lightgray2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/assessment_title1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="业务可用性"
            android:textSize="@dimen/default_small_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/assessment_title2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="数据一致性"
            android:textSize="@dimen/default_small_size"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/assessment_title3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:text="月度扣分项"
            android:textSize="@dimen/default_small_size"
            android:textStyle="normal" />
    </LinearLayout>

    <View
        android:id="@+id/assessment_bottom_bar"
        android:layout_width="100dp"
        android:layout_height="3dp"
        android:background="@color/falut_item_color_s"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/assessment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>