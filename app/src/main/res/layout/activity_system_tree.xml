<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical" >

    <include layout="@layout/common_title" />
     <include layout="@layout/item_charge_people"
        android:visibility="visible"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_lightgray2"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/system_tree1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="渠道支撑\n应用层"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/system_tree2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="业务能力\n集成层"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/system_tree3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="核心能力\n中心层"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/system_tree4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="基础\n能力层"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/system_tree5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="5dp"
                android:text="接口\n子域"
                android:textSize="@dimen/default_ssmall_size"
                android:textStyle="normal" />
        </LinearLayout>

        <View
            android:id="@+id/system_tree_bottom_bar"
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/falut_item_color_s"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" />
    </LinearLayout>
    
    <LinearLayout 
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        >
        <ImageView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_star_red_s"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="核心系统"
            android:textSize="@dimen/default_ssmall_size"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />
        
        <ImageView 
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_star_yellow_s"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重要系统"
            android:textSize="@dimen/default_ssmall_size"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />
        
        <ImageView 
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_star_gray_s"
            />
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="一般系统"
            android:textSize="@dimen/default_ssmall_size"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            />
        
        
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/system_tree_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >
    </android.support.v4.view.ViewPager>

</LinearLayout>