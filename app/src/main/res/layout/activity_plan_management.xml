<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_lightgray"
    android:orientation="vertical" >
    <include layout="@layout/common_title"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_lightgray"
        android:orientation="horizontal">
        <View 
            android:layout_width="10dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/color_lightblue"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预案管理"
              android:layout_marginLeft="5dp"
              android:textSize="@dimen/default_large_size"
            android:gravity="center"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
            android:background="@color/color_white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_item1_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/default_xxlarge_size"
                android:text="55"/>
            <TextView 
                 android:id="@+id/tv_item1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                  android:textSize="@dimen/default_ssmall_size"
                android:gravity="center"
                android:text="告警自动化"/>
              
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
             android:background="@color/color_white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_item2_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/default_xxlarge_size"
                android:text="55"/>
            <TextView 
                 android:id="@+id/tv_item2_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                android:gravity="center"
                     android:textSize="@dimen/default_ssmall_size"
                android:text="告警自动化"/>
              
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
             android:background="@color/color_white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_item3_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/default_xxlarge_size"
                android:text="55"/>
            <TextView 
                 android:id="@+id/tv_item3_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                       android:textSize="@dimen/default_ssmall_size"
                android:gravity="center"
                android:text="告警自动化"/>
              
        </LinearLayout>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="2dp"
             android:background="@color/color_white"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView 
                android:id="@+id/tv_item4_0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/default_xxlarge_size"
                android:text="55"/>
            <TextView 
                 android:id="@+id/tv_item4_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                  android:layout_marginTop="2dp"
                android:gravity="center"
                     android:textSize="@dimen/default_ssmall_size"
                android:text="告警自动化"/>
              
        </LinearLayout>
    </LinearLayout>
  
     <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/color_lightgray"
        android:orientation="horizontal">
        <View 
            android:layout_width="10dp"
            android:layout_height="26dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:background="@color/color_lightblue"/>
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="预案统计"
              android:layout_marginLeft="5dp"
              android:textSize="@dimen/default_large_size"
            android:gravity="center"/>
          <View 
        android:layout_width="50dp"
        android:layout_height="match_parent"/>
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView 
                android:id="@+id/tv_today"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="今日"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView 
                android:id="@+id/tv_yesterday"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="昨日"/>
        </LinearLayout>
          <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView 
                android:id="@+id/tv_week"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="一周"/>
        </LinearLayout>
         <LinearLayout 
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="match_parent">
            <TextView 
                android:id="@+id/tv_month"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="match_parent"
                android:text="一月"/>
        </LinearLayout>
          <View 
        android:layout_width="30dp"
        android:layout_height="match_parent"/>
    </LinearLayout>
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/color_white"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="合计"/>
              <TextView 
                  android:id="@+id/tv_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:textSize="@dimen/default_xxxlarge_size"
                android:text="444"/>
             <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/default_xlarge_size"
                android:text="项"/>
        </LinearLayout>
        <View 
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/color_gray2"/>
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">
            <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_yuan_shoudong"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="手动"/>
                     <TextView 
                         android:id="@+id/tv_shoudong"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                      <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次"/>
                </LinearLayout>
            </LinearLayout>
               <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_yuan_dingshi"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="定时"/>
                     <TextView 
                         android:id="@+id/tv_dingshi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                      <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次"/>
                </LinearLayout>
            </LinearLayout>
               <LinearLayout 
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">
                <ImageView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_yuan_gaojing"/>
                <LinearLayout 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="告警"/>
                     <TextView 
                         android:id="@+id/tv_gaojing"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"/>
                      <TextView 
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="次"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
           <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_lightgray"/>
         <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:textSize="@dimen/default_middle_size"
                   android:text="预案执行结果"/>
             <com.github.mikephil.charting.charts.PieChart
          
             android:id="@+id/pie_chart_plan_management"
             android:layout_width="200dp"
             android:layout_height="150dp"
             android:layout_gravity="center">
             
         </com.github.mikephil.charting.charts.PieChart>
         </LinearLayout>
          <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_lightgray"/>
           <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:textSize="@dimen/default_middle_size"
                   android:text="预案执行统计"/>
         <com.github.mikephil.charting.charts.LineChart
             android:id="@+id/line_chart1_plan_management"
              android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:layout_gravity="center">
             
         </com.github.mikephil.charting.charts.LineChart>
         </LinearLayout>
          <View 
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/color_lightgray"/>
           <LinearLayout 
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
               <TextView 
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_margin="5dp"
                   android:textSize="@dimen/default_middle_size"
                   android:text="预案数"/>
            <com.github.mikephil.charting.charts.LineChart
             android:id="@+id/line_chart2_plan_management"
              android:layout_marginTop="10dp"
             android:layout_width="match_parent"
             android:layout_height="180dp"
             android:layout_gravity="center">
             
         </com.github.mikephil.charting.charts.LineChart>
         </LinearLayout>
    </LinearLayout>
   
	</ScrollView>
</LinearLayout>
