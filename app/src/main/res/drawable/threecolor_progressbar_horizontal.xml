<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
        <!-- background -->
    <item
        android:id="@android:id/background">
        <shape >
             <solid android:color="@color/guard_red" />
        </shape>
    </item>
    <!-- progress -->
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <solid android:color="@color/guard_green" />
            </shape>
            
        </clip>
    </item>
    <!-- second progress -->

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <solid android:color="@color/guard_blue" />
            </shape>
            
        </clip>
    </item>	

</layer-list>
